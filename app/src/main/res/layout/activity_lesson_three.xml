<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lesson_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lesson_three_bg"
    tools:context="readwithme.com.LessonThreeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/string_cable" />

    <LinearLayout
        android:id="@+id/linear_string_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lesson_three_arrow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/lesson_three_arrow" />

            <ImageView
                android:id="@+id/lesson_three_ant"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:src="@drawable/lesson_three_ant" />

            <ImageView
                android:id="@+id/lesson_three_mad"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@drawable/lesson_three_mad" />

            <ImageView
                android:id="@+id/lesson_three_van"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:src="@drawable/lesson_three_van" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/lesson_three_arrow_w" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:src="@drawable/lesson_three_ant_w" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@drawable/lesson_three_mad_w" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:src="@drawable/lesson_three_van_w" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/img_string_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_string_one"
        android:src="@drawable/string_cable" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_string_two"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_sep"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/img_bad"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/img_sep"
            android:src="@drawable/lesson_three_bad" />

        <ImageView
            android:id="@+id/lesson_three_apple"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/img_sep"
            android:src="@drawable/lesson_three_apple" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/img_bad"
            android:layout_toLeftOf="@+id/img_sep"
            android:src="@drawable/lesson_three_bad_w" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/lesson_three_apple"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_sep"
            android:src="@drawable/lesson_three_apple_w" />

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progressBarThree"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />


    <ToggleButton
        android:id="@+id/cmd_speakLessonThree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:tag="1"

        android:textOff="Tap and speak"
        android:textOn="Tap to stop" />
</RelativeLayout>
