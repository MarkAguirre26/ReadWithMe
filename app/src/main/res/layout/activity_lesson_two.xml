<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lesson_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lesson_two"
    tools:context="readwithme.com.LessonTwoActivity">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pause_home"
        android:onClick="cmd_home_Clicked" />

    <TextView
        android:id="@+id/txt_timer_lessonTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="60"
        android:textSize="20sp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/lesson_two_header" />

    <ImageView
        android:id="@+id/img_lessontwo_bench"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:src="@drawable/lesson_two_bench" />

    <ImageView
        android:id="@+id/img_lessontwo_swing"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/lesson_two_swing" />

    <ImageView
        android:id="@+id/img_lessontwo_girl"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/lesson_two_girl" />

    <ImageView
        android:id="@+id/img_lessontwo_sandbox"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/lesson_two_sandbox" />

    <ImageView
        android:id="@+id/img_lessontwo_table"
        android:layout_width="250dp"
        android:scaleType="fitXY"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/lesson_two_table" />

    <ImageView
        android:id="@+id/img_lessontwo_slide"
        android:layout_width="340dp"
        android:layout_height="320dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/lesson_two_slide" />


    <ImageView

        android:id="@+id/img_bucket"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/lesson_two_bucket" />

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_rock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/lesson_two_rock" />

    <ProgressBar
        android:id="@+id/progressBarLessontwo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="47dp" />

    <ToggleButton
        android:id="@+id/toggleButtonlessontwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/tab_speack"
        android:textOff=""
        android:textOn="" />

</RelativeLayout>
