<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g2l3_bg"
    tools:context="readwithme.com.g2l3_Activity">
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pause_home"
        android:onClick="cmd_home_Clicked" />

    <Button
        android:id="@+id/cmd_next_g2l3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:onClick="cmd_next_Clicked" />

    <ImageView
        android:id="@+id/img_teacher_g2l3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/mr_favian" />

    <ImageView
        android:id="@+id/img_bubble_g2l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp"
        android:layout_toRightOf="@+id/img_teacher_g2l3"
        android:src="@drawable/convo_g1l4" />

    <ImageView

        android:id="@+id/img_title_g2l3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_subject"
        android:layout_centerHorizontal="true"
        android:src="@drawable/g2l3_nr_title" />

    <RelativeLayout
        android:id="@+id/layout_subject"
        android:layout_width="280dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/img_subject_g2l3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/g2l3_nr_1_right" />

    </RelativeLayout>


    <ToggleButton
        android:id="@+id/cmd_speak_g2l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/tab_speack"
        android:textOff=""
        android:textOn="" />

    <ProgressBar
        android:id="@+id/progressBar_g2l3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
