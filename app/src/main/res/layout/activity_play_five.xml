<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_five"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lesson_5"
    tools:context="readwithme.com.PlayFiveActivity">
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pause_home"
        android:onClick="cmd_home_Clicked" />

    <Button
        android:id="@+id/cmd_next_g1l5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:onClick="cmd_next_Clicked" />

    <ImageView
        android:id="@+id/img_teacher_g1l5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/mr_favian" />

    <ImageView
        android:id="@+id/img_bubble_g1l5"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="270dp"
        android:layout_toRightOf="@+id/img_teacher_g1l5"
        android:src="@drawable/g1l5_convo" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="160dp"
        android:src="@drawable/a_g1l4">

        <ImageView
            android:id="@+id/img_subject_g1l5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/g1l4_subject" />


        <ImageView
            android:id="@+id/img_highlight1_g1l5"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

        <ImageView
            android:id="@+id/img_highlight2_g1l5"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

        <ImageView
            android:id="@+id/img_highlight3_g1l5"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:layout_marginLeft="52dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

        <ImageView
            android:id="@+id/img_highlight4_g1l5"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="72dp"
            android:layout_marginRight="72dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

    </RelativeLayout>


    <ToggleButton
        android:id="@+id/cmd_speak_g1l5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/tab_speack" />

    <ProgressBar
        android:id="@+id/progressBar__g1l5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
