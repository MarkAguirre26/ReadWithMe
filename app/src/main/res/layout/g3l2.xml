<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lesson_4"
    tools:context="readwithme.com.g3l2Activity">
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pause_home"
        android:onClick="cmd_home_Clicked" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/fence" />


    <ImageView
        android:id="@+id/img_teacher_g3l2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/mr_favian" />

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:layout_above="@+id/img_teacher_g3l2"
        android:layout_toRightOf="@+id/img_teacher_g3l2">

        <ImageView
            android:id="@+id/img_bubble_g3l2"
            android:layout_width="230dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/g3l2_convo_1" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView

            android:id="@+id/img_title_g3l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/g3l2_title" />

        <ImageView
            android:id="@+id/img_subject_g3l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/g3l2_subject_1" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar_g3l2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="28dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />


    <Button
        android:id="@+id/cmd_next_g3l2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:onClick="cmd_next_Clicked"
        android:textAllCaps="false"
        android:textColor="#002aff" />

    <ToggleButton
        android:id="@+id/toggleButton_g3l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/tab_speack" />
</RelativeLayout>
