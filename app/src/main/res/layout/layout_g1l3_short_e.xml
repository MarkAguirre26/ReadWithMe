<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lesson_3_e_bg">

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/whole_long_e">

        <ImageView
            android:id="@+id/img_g1l3_h1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

        <ImageView
            android:id="@+id/img_g1l3_h2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="85dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

        <ImageView
            android:id="@+id/img_g1l3_h3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

        <ImageView
            android:id="@+id/img_g1l3_h4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

        <ImageView
            android:id="@+id/img_g1l3_h5"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/g1l5_highlight" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar_lesson_3E_long"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ToggleButton
        android:id="@+id/toggleButton_lesson_3E_play_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/tab_speack" />
</RelativeLayout>
