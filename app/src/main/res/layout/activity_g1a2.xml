<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_g1a2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lesson_3_e_bg"
    tools:context="readwithme.com.g1A2Activity">


    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pause_home"
        android:onClick="cmd_home_Clicked" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:onClick="cmd_next_g1a2_Clicked"
        android:id="@+id/cmd_next_g1a2"/>
    <ImageView
        android:id="@+id/imf_bubble_g1a2"
        android:layout_toRightOf="@+id/img_teacher_g1a2"
        android:layout_above="@+id/img_teacher_g1a2"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:src="@drawable/g1l2_convo"/>
    <ImageView
        android:id="@+id/img_teacher_g1a2"
        android:layout_alignParentBottom="true"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/mr_favian"/>

    <RelativeLayout
        android:id="@+id/rel_Subject_g1a2"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/g1l2_subject">

        <ImageView
            android:id="@+id/img_g1a2_h1"
            android:layout_width="192dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:src="@drawable/highlight" />

        <ImageView
            android:id="@+id/img_g1a2_h2"
            android:layout_width="192dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/highlight" />

        <ImageView
            android:id="@+id/img_g1a2_h3"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/highlight" />

        <ImageView
            android:id="@+id/img_g1a2_h4"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/highlight" />

        <ImageView
            android:id="@+id/img_g1a2_h5"
            android:layout_width="192dp"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/highlight" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar_g1a2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ToggleButton
        android:id="@+id/toggleButton_g1a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/tab_speack" />

</RelativeLayout>
